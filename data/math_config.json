{
  "grade_levels": [
    {
      "id": "1-2",
      "name": "1-2年级",
      "description": "基础运算（打牢计算根基）",
      "categories": [
        {
          "id": "addition_within_20",
          "name": "20以内加减法",
          "types": [
            {
              "id": "oral_calculation",
              "name": "口算",
              "description": "凑十法、破十法",
              "examples": ["8+5", "13-4"]
            },
            {
              "id": "continuous_addition",
              "name": "连加",
              "examples": ["3+4+5"]
            },
            {
              "id": "continuous_subtraction",
              "name": "连减",
              "examples": ["15-6-3"]
            },
            {
              "id": "mixed_addition_subtraction",
              "name": "加减混合",
              "examples": ["7+3-5"]
            }
          ]
        },
        {
          "id": "addition_within_100",
          "name": "100以内加减法",
          "types": [
            {
              "id": "oral_calculation_100",
              "name": "口算",
              "description": "整十数加减、两位数加减一位数",
              "examples": ["30+40", "56+3", "78-5"]
            },
            {
              "id": "written_calculation_100",
              "name": "笔算",
              "description": "进退位竖式",
              "examples": ["46+27", "73-25"]
            }
          ]
        },
        {
          "id": "multiplication_division",
          "name": "表内乘除法",
          "types": [
            {
              "id": "multiplication_table",
              "name": "乘法口诀",
              "description": "2-9乘法口诀",
              "examples": ["6×7", "8×9"]
            },
            {
              "id": "division_by_table",
              "name": "用口诀求商",
              "examples": ["42÷6", "56÷8"]
            }
          ]
        },
        {
          "id": "simple_mixed",
          "name": "简单混合运算",
          "types": [
            {
              "id": "same_level",
              "name": "同级运算",
              "description": "从左到右",
              "examples": ["15+6-8", "24÷3×2"]
            }
          ]
        }
      ]
    },
    {
      "id": "3-4",
      "name": "3-4年级",
      "description": "整数运算深化（拓展运算范围）",
      "categories": [
        {
          "id": "multi_digit_multiplication",
          "name": "多位数乘一位数",
          "types": [
            {
              "id": "oral_multi",
              "name": "口算",
              "description": "整十/整百数乘一位数",
              "examples": ["30×4", "200×5"]
            },
            {
              "id": "written_multi",
              "name": "笔算",
              "description": "含连续进位",
              "examples": ["123×4", "256×3"]
            }
          ]
        },
        {
          "id": "remainder_division",
          "name": "有余数的除法",
          "types": [
            {
              "id": "remainder_calc",
              "name": "笔算",
              "description": "余数<除数",
              "examples": ["67÷5", "58÷4"]
            }
          ]
        },
        {
          "id": "two_digit_multiplication",
          "name": "两位数乘两位数",
          "types": [
            {
              "id": "estimate_multi",
              "name": "口算",
              "description": "估算",
              "examples": ["34×28≈900"]
            },
            {
              "id": "written_multi_2digit",
              "name": "笔算",
              "description": "含进位",
              "examples": ["34×28", "45×36"]
            }
          ]
        },
        {
          "id": "one_digit_division",
          "name": "除数是一位数的除法",
          "types": [
            {
              "id": "zero_division",
              "name": "笔算",
              "description": "商中间/末尾有0",
              "examples": ["408÷4", "630÷6"]
            }
          ]
        },
        {
          "id": "four_operations",
          "name": "四则混合运算",
          "types": [
            {
              "id": "with_parentheses",
              "name": "含括号",
              "description": "先乘除后加减，先算括号内",
              "examples": ["(25+15)×3", "72÷(18÷2)"]
            }
          ]
        }
      ]
    },
    {
      "id": "5-6",
      "name": "5-6年级",
      "description": "小数、分数、百分数运算（进阶核心）",
      "categories": [
        {
          "id": "decimal_operations",
          "name": "小数运算",
          "types": [
            {
              "id": "decimal_addition",
              "name": "加减法",
              "description": "小数点对齐",
              "examples": ["3.25+1.7", "5.6-2.3"]
            },
            {
              "id": "decimal_multiplication",
              "name": "乘除法",
              "description": "先按整数算，再定小数点位置",
              "examples": ["2.4×0.3", "5.6÷0.07"]
            }
          ]
        },
        {
          "id": "fraction_operations",
          "name": "分数运算",
          "types": [
            {
              "id": "fraction_addition",
              "name": "加减法",
              "description": "同分母：分子相加减；异分母：先通分再计算",
              "examples": ["1/2+1/3", "3/4-1/2"]
            },
            {
              "id": "fraction_multiplication",
              "name": "乘除法",
              "description": "乘法：分子×分子，分母×分母；除法：乘倒数",
              "examples": ["2/3×3/4", "5/6÷1/2"]
            },
            {
              "id": "fraction_mixed",
              "name": "混合运算",
              "description": "含简便运算",
              "examples": ["1/2×(2/3+1/6)"]
            }
          ]
        },
        {
          "id": "percentage_operations",
          "name": "百分数运算",
          "types": [
            {
              "id": "percentage_conversion",
              "name": "互化",
              "description": "百分数与小数/分数互化",
              "examples": ["25%=0.25", "1/4=25%"]
            },
            {
              "id": "percentage_application",
              "name": "应用题相关计算",
              "examples": ["80的20%是多少", "50比40多百分之几"]
            }
          ]
        },
        {
          "id": "operation_laws",
          "name": "运算定律应用",
          "types": [
            {
              "id": "simplified_calculation",
              "name": "简算",
              "description": "用交换律、结合律、分配律简算",
              "examples": ["3.8×99+3.8", "1/4×5+1/4×3"]
            }
          ]
        }
      ]
    }
  ]
}